{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [ "widget" ],
  "properties": {
    "widget": {
      "description": "a semantic description of the desired mashup",
      "type": [
        { "$ref": "#/definitions/rdfjson" },
        { "$ref": "#/definitions/text" }
      ]
    },
    "minDepth": {
      "description": "the minimum plan depth",
      "type": "integer",
      "minimum": 1,
      "default": 1
    },
    "maxDepth": {
      "description": "the maximum plan depth",
      "type": "integer",
      "minimum": 1
    }
  },
  "definitions": {
    "rdfjson": {
      "description": "embedded RDF/JSON",
      "type": "object"
    },
    "text": {
      "description": "RDF in any textual representation",
      "type": "object",
      "properties": {
        "contentType": {
          "type": "string",
          "pattern": "^(?:application|audio|image|text|video)[^\x00-\x20\x7F()<>@,;:\\"/\[\]?.=]+$"
        },
        "content": { "type": "string" }
      },
      "required": [ "contentType", "content" ]
    }
  }
}
